<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  
  <item android:state_pressed="true">
    <shape>
      <solid
          android:color="#C4F0BE"/>
      <stroke
          android:width="1dp"
          android:color="#a222" />
      <corners android:radius="100dp" />
    </shape>
  </item>
  <item>
    <shape>
      <solid
          android:color="#fff"/>
      <stroke
          android:width="1dp"
          android:color="#a222" />
      <corners android:radius="100dp" />
    </shape>
  </item>
</selector>