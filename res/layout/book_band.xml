<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:orientation="vertical" >
<ScrollView
    android:id="@+id/scrollview"
    android:background="#eee"
    android:padding="10dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dip"
        android:background="@drawable/edit_border_small"
        android:orientation="vertical" >
        
        <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:clickable="true"
          android:background="#fff"
          android:layout_marginTop="5dip"
          android:paddingTop="10dip"
          android:paddingBottom="10dip"
          android:orientation="horizontal" >
          <ImageView
              android:id="@+id/icon0"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dip"
              android:layout_centerVertical="true"
              android:layout_marginRight="10dip"
              android:scaleType="fitXY"
              android:src="@drawable/ic_gray" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/icon0"
              android:text="Beginner"
              android:layout_centerVertical="true"
              android:textColor="#a111"
              android:textSize="15sp"/>
      </RelativeLayout>
      <View
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:layout_marginRight="6dip"
          android:layout_marginLeft="6dip"
          android:background="#a999"/>
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="5dp"
          android:padding="10dip"
          android:background="#fff"
          android:orientation="vertical" >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#a222"
              android:text="You just started reading books. But you need more than 5 Reading Score to reach next level"
              android:textSize="15sp" />
      </LinearLayout>   
    </LinearLayout>

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dip"
    android:background="@drawable/edit_border_small"
    android:orientation="vertical" >
    
    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:background="#fff"
      android:layout_marginTop="5dip"
      android:paddingTop="10dip"
      android:paddingBottom="10dip"
      android:orientation="horizontal" >
      <ImageView
          android:id="@+id/icon1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dip"
          android:layout_centerVertical="true"
          android:layout_marginRight="10dip"
          android:scaleType="fitXY"
          android:src="@drawable/ic_green" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/icon1"
          android:text="Occasional Reader"
          android:layout_centerVertical="true"
          android:textColor="#a111"
          android:textSize="15sp"/>
  </RelativeLayout>
  <View
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_marginRight="6dip"
      android:layout_marginLeft="6dip"
      android:background="#a999"/>
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:padding="10dip"
      android:background="#fff"
      android:orientation="vertical" >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#a222"
          android:text="You are in the flow. But you need more than 50 Reading Score to reach next level"
          android:textSize="15sp" />
  </LinearLayout>   
</LinearLayout>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dip"
    android:background="@drawable/edit_border_small"
    android:orientation="vertical" >
    
    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:background="#fff"
      android:layout_marginTop="5dip"
      android:paddingTop="10dip"
      android:paddingBottom="10dip"
      android:orientation="horizontal" >
      <ImageView
          android:id="@+id/icon2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dip"
          android:layout_centerVertical="true"
          android:layout_marginRight="10dip"
          android:scaleType="fitXY"
          android:src="@drawable/ic_brown" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/icon2"
          android:text="Regular Reader"
          android:layout_centerVertical="true"
          android:textColor="#a111"
          android:textSize="15sp"/>
  </RelativeLayout>
  <View
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_marginRight="6dip"
      android:layout_marginLeft="6dip"
      android:background="#a999"/>
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:padding="10dip"
      android:background="#fff"
      android:orientation="vertical" >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#a222"
          android:text="You have become an average book reader. But you need more than 250 Reading Score to reach next level"
          android:textSize="15sp" />
  </LinearLayout>   
</LinearLayout>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dip"
    android:background="@drawable/edit_border_small"
    android:orientation="vertical" >
    
    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:background="#fff"
      android:layout_marginTop="5dip"
      android:paddingTop="10dip"
      android:paddingBottom="10dip"
      android:orientation="horizontal" >
      <ImageView
          android:id="@+id/icon3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dip"
          android:layout_centerVertical="true"
          android:layout_marginRight="10dip"
          android:scaleType="fitXY"
          android:src="@drawable/ic_violet" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/icon3"
          android:text="Avid Reader"
          android:layout_centerVertical="true"
          android:textColor="#a111"
          android:textSize="15sp"/>
  </RelativeLayout>
  <View
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_marginRight="6dip"
      android:layout_marginLeft="6dip"
      android:background="#a999"/>
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:padding="10dip"
      android:background="#fff"
      android:orientation="vertical" >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#a222"
          android:text="Your reading skill is amazing. Reach 500 Reading Score to become BOOKWORM"
          android:textSize="15sp" />
  </LinearLayout>   
</LinearLayout>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dip"
    android:background="@drawable/edit_border_small"
    android:orientation="vertical" >
    
    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:background="#fff"
      android:layout_marginTop="5dip"
      android:paddingTop="10dip"
      android:paddingBottom="10dip"
      android:orientation="horizontal" >
      <ImageView
          android:id="@+id/icon4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dip"
          android:layout_centerVertical="true"
          android:layout_marginRight="10dip"
          android:scaleType="fitXY"
          android:src="@drawable/ic_blue" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/icon4"
          android:text="Bookworm"
          android:layout_centerVertical="true"
          android:textColor="#a111"
          android:textSize="15sp"/>
  </RelativeLayout>
  <View
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_marginRight="6dip"
      android:layout_marginLeft="6dip"
      android:background="#a999"/>
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:padding="10dip"
      android:background="#fff"
      android:orientation="vertical" >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#a222"
          android:text="Your are literally a BOOKWORM at this level"
          android:textSize="15sp" />
  </LinearLayout>   
</LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>