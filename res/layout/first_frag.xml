<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"> 
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#fff"
	    android:orientation="vertical">
	    <LinearLayout
	        android:id="@+id/click_image"
	        android:layout_width="fill_parent"
	        android:layout_height="185dip"
	        android:background="@drawable/book_shelf6"
	        android:clickable="true"
	        android:paddingBottom="15dip"
	        android:paddingLeft="20dip"
	        android:gravity="bottom"
          	android:paddingTop="10dip"
	        android:orientation="horizontal" >
	        <RelativeLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" >
			    <ImageView
			        android:id="@+id/image_cover"
			        android:layout_width="99dp"
			        android:layout_height="130dip"
			        android:contentDescription="TODO"
			        android:scaleType="fitXY"
			        android:src="@drawable/book_cover1" />
			    <ImageView
		            android:id="@+id/image_label"
		            android:layout_width="89dip"
		            android:layout_height="127dip"
		            android:layout_marginTop="2dp"
		            android:layout_marginLeft="7dp"
		            android:contentDescription="TODO"
		            android:padding="1dp"
		            android:scaleType="fitXY"
		            android:src="@drawable/book" />

			    <ProgressBar
			        android:id="@+id/loading"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:layout_centerVertical="true"
			        android:visibility="visible" />

			</RelativeLayout>
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:orientation="vertical">
		        <TextView
			        android:id="@+id/title_label"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="27dp"
			        android:layout_marginLeft="10dp"
			        android:textColor="#ffffff"
			        android:textSize="16sp"
			        android:textStyle="bold"
			        style="@style/drawer_text"
			        android:ellipsize="end"
			        android:singleLine="true"
			        android:text="TextView"/>
		
			    <LinearLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginBottom="10dp"
			        android:layout_marginLeft="10dp"
			        android:orientation="horizontal" >
		
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            style="@style/drawer_text_author"
			            android:text="By "
			            android:textColor="#eee"
			            android:textSize="13sp"/>
		
			        <TextView
			            android:id="@+id/author_label"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            style="@style/drawer_text_author"
			            android:text="Text View"
				        android:ellipsize="end"
				        android:singleLine="true"
			            android:textColor="#eee"
			            android:textSize="13sp" />
			    </LinearLayout>
			 </LinearLayout>
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:layout_marginTop="5dp"
	        android:gravity="center"
	        android:visibility="gone"
	        android:orientation="horizontal" >

	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dp"
	            android:orientation="vertical" >

	            <TextView
	                android:id="@+id/times_rented"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:text="82"
	                android:textColor="#008800"
	                android:textSize="20sp"
	                android:textStyle="italic" />

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Times Rented : "
	                android:textColor="#777777"
	                android:textSize="12sp" />
	        </LinearLayout>

	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:orientation="vertical" >

	            <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:orientation="horizontal" >

	                <TextView
	                    android:id="@+id/avg_reading"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="4"
	                    android:textColor="#008800"
	                    android:textSize="20sp"
	                    android:textStyle="italic" />

	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text=" days"
	                    android:textColor="#008800"
	                    android:textSize="16sp"
	                    android:textStyle="italic" />
	            </LinearLayout>

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Avg reading time : "
	                android:textColor="#777777"
	                android:textSize="12sp" />
	        </LinearLayout>
	    </LinearLayout>

	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#dcb667" 
	        android:visibility="gone"/>

	    <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dip"
	        android:baselineAligned="false"
	        android:orientation="horizontal"
	        android:padding="5dp" 
	        android:visibility="gone">

	        <LinearLayout
	            android:id="@+id/button_rental"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/icon_click"
	            android:clickable="true"
	            android:gravity="center"
	            android:orientation="vertical"
	            android:paddingBottom="2dp" >

	            <ImageView
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginBottom="5dp"
	                android:background="@drawable/ic_action_import_export"
	                android:contentDescription="@string/hello" />

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Rent"
	                android:textColor="#333"
	                android:textSize="10sp"
	                android:textStyle="bold" />
	        </LinearLayout>

	        <LinearLayout
	            android:id="@+id/click3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/icon_click"
	            android:clickable="true"
	            android:gravity="center"
	            android:orientation="vertical" >

	            <ImageView
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginBottom="5dp"
	                android:background="@drawable/ic_action_new_attachment"
	                android:contentDescription="@string/hello" />

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Add"
	                android:textColor="#333"
	                android:textSize="10sp"
	                android:textStyle="bold" />
	        </LinearLayout>

	        <LinearLayout
	            android:id="@+id/share"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="20dp"
	            android:layout_weight="1"
	            android:background="@drawable/icon_click"
	            android:clickable="true"
	            android:gravity="center"
	            android:orientation="vertical" >

	            <ImageView
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginBottom="5dp"
	                android:background="@drawable/ic_action_share"
	                android:contentDescription="@string/hello" />

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Share"
	                android:textColor="#333"
	                android:textSize="10sp"
	                android:textStyle="bold" />
	        </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
</FrameLayout>