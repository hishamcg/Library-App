<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b000"
    tools:context=".SearchActivity" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:contentDescription="@string/hello"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/jb_logo" />
    <TextView
        android:id="@+id/hint_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Enter your mobile number to sign in"/>

    <Button
        android:background="@drawable/gcm_reg_button"
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:text="Sign In"/>
        <!-- style="@style/button_text" -->

    <EditText
        android:id="@+id/editText1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:layout_above="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:hint="Enter Registered Mobile number"
        android:inputType="number"
        android:textColor="#444444"
        android:singleLine="true">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/no_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:textColor="#EB4C4C"
        android:visibility="gone"
        android:textStyle="italic"
        android:layout_marginBottom="23dp"
        android:text="No Internet Connection"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
