<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#eee"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

                <TextView
                    android:id="@+id/title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mohammed Hisham"
                    android:textColor="#a000"
                    android:textSize="18sp"/>
                    <!-- android:ellipsize="end"
                android:singleLine="true"  -->
                <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:paddingLeft="2dp" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="By "
		                android:textColor="#a000"
		                android:textSize="14sp"/>
		
		            <TextView
	                    android:id="@+id/author_label"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="Strata retail and technology"
	                    android:textColor="#a000"
	                    android:textSize="14sp" />
		        </LinearLayout>
                <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:paddingLeft="2dp" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Category : "
		                android:textColor="#a000"
		                android:textSize="14sp"/>
		
		            <TextView
		                android:id="@+id/category_label"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Text View"
		                android:textColor="#a000"
		                android:textSize="14sp" />
		        </LinearLayout>
                
                <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dip"
                     android:text="BOOK COVER"
                     android:textStyle="bold"
                     android:textColor="#dfa569"
                     android:textSize="12sp" />
                <View
		            android:layout_width="fill_parent"
		            android:layout_height="1dp"
		            android:background="#dfa569"/>
       <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="7dip"
             android:background="#e0e0e0"
             android:orientation="horizontal" >
            <ImageView
                android:id="@+id/image_label"
                android:layout_width="105dp"
                android:layout_height="145dip"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                android:gravity="left"
                android:padding="5dip"
                android:src="@drawable/book" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" >
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Times rented : "
                      android:textColor="#a000"
                      android:textSize="14sp"
                      android:textStyle="italic"/>
                  <TextView
                      android:id="@+id/times_rented"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="82"
                      android:textColor="#dfa569"
                      android:textSize="15sp" />
                </LinearLayout>
                <View
          		android:layout_width="fill_parent"
          		android:layout_height="1dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
          		android:background="#dfa569"/>
                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" >
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Reading time : "
                      android:textColor="#a000"
                      android:textSize="14sp"
                      android:textStyle="italic"/>
                  <TextView
                      android:id="@+id/avg_reading"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="4"
                      android:textColor="#dfa569"
                      android:textSize="15sp"/>
                  <TextView
                      android:id="@+id/days_plain_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text=" days"
                      android:textColor="#dfa569"
                      android:textSize="14sp"/>
                </LinearLayout>
                <RelativeLayout
                  android:id="@+id/avail_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dip"
                  android:orientation="vertical" >
                  <TextView
                      android:id="@+id/dummy1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="AVAILABILITY STATUS"
                      android:textStyle="bold"
                     android:textColor="#dfa569"
                     android:textSize="12sp"/>
				  <View
	          		android:layout_width="fill_parent"
	          		android:layout_below="@+id/dummy1"
	          		android:layout_height="1dp"
          			android:background="#dfa569"/>
                  <TextView
                      android:id="@+id/avail_text"
                      android:layout_below="@+id/dummy1"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="fetching data ..."
                      android:textColor="#a000"
                      android:layout_toRightOf="@+id/progress_avail"
                      android:layout_marginTop="3dip"
                      android:maxLines="2"
                      android:textSize="13sp"/>

                  <ProgressBar
                      android:id="@+id/progress_avail"
                      style="?android:attr/progressBarStyleSmall"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="4dip"
                      android:layout_below="@+id/dummy1" />

                </RelativeLayout>
         </LinearLayout>
           </LinearLayout>
           <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="ACTIONS"
                     android:textColor="#dfa569"
                     android:textSize="12sp"
                     android:textStyle="bold"/>
                <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#dfa569"/>
    </LinearLayout>
<!-- ######################################################################################## -->
<LinearLayout
    android:id="@+id/relativeLayout_inside"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/linearLayout1"
    android:orientation="horizontal"
    android:layout_margin="10dip">
                
          <LinearLayout
              android:id="@+id/button_rental"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@drawable/icon_click"
              android:clickable="true"
              android:gravity="center"
              android:orientation="vertical" >

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/rent"
                  android:contentDescription="@string/hello" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Rent"
                  android:textColor="#a000"
                  android:textSize="12sp"
                  android:textStyle="bold" />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/remove"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@drawable/icon_click"
              android:clickable="true"
              android:gravity="center"
              android:orientation="vertical" >

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/remove"
                  android:contentDescription="@string/hello" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Remove"
                  android:textColor="#a000"
                  android:textSize="12sp"
                  android:textStyle="bold" />
          </LinearLayout>
          
          <LinearLayout
              android:id="@+id/order_cancel"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@drawable/icon_click"
              android:clickable="true"
              android:gravity="center"
              android:visibility="gone"
              android:orientation="vertical" >

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/ic_cancel1"
                  android:contentDescription="@string/hello" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Cancel"
                  android:textColor="#a000"
                  android:textSize="12sp"
                  android:textStyle="bold" />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/add_to_list"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@drawable/icon_click"
              android:clickable="true"
              android:gravity="center"
              android:orientation="vertical" >

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/add"
                  android:contentDescription="@string/hello" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Wishlist"
                  android:textColor="#a000"
                  android:textSize="12sp"
                  android:textStyle="bold" />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/pick_up"
              android:visibility="gone"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@drawable/icon_click"
              android:clickable="true"
              android:gravity="center"
              android:orientation="vertical" >

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/pick_up1"
                  android:contentDescription="@string/hello" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Pick up"
                  android:textColor="#a000"
                  android:textSize="12sp"
                  android:textStyle="bold" />
          </LinearLayout>
  <!-- ######################################################################################## -->
          <LinearLayout
              android:id="@+id/sign_in"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@drawable/icon_click"
              android:clickable="true"
              android:gravity="center"
              android:orientation="vertical" >

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/sign_in_1"
                  android:contentDescription="@string/hello" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Signin"
                  android:textColor="#a000"
                  android:textSize="12sp"
                  android:textStyle="bold" />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/sign_up"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@drawable/icon_click"
              android:clickable="true"
              android:gravity="center"
              android:orientation="vertical" >

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/sign_up"
                  android:contentDescription="@string/hello" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Signup"
                  android:textColor="#a000"
                  android:textSize="12sp"
                  android:textStyle="bold" />
          </LinearLayout>
      	  <LinearLayout
             android:id="@+id/share"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:background="@drawable/icon_click"
             android:clickable="true"
             android:gravity="center"
             android:orientation="vertical" >
			
             <ImageView
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_marginBottom="5dp"
                 android:background="@drawable/share"
                 android:contentDescription="@string/hello" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Share"
                 android:textColor="#a000"
                 android:textSize="12sp"
                 android:textStyle="bold" />
         </LinearLayout>
         <!-- <RelativeLayout
		    android:id="@+id/relativeLayout_pickup"
		    android:visibility="gone"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true">
		      <TextView
		        android:id="@+id/pickup_order"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="10dip"
		        android:textSize="14sp"
		        android:textStyle="italic"
		        android:textColor="#F54747"
		        android:text="text"
		        android:layout_marginBottom="5dip"/>
  		</RelativeLayout> -->
</LinearLayout>
<!-- ######################################################################################## -->

    <LinearLayout
        android:id="@+id/DetailLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dip"
        android:layout_below="@id/relativeLayout_inside">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="DETAILS"
          android:textColor="#dfa569"
          android:textStyle="bold"
          android:textSize="12sp" />
      <View
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#dfa569"
          android:textStyle="bold"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pages : "
                android:textColor="#a000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textColor="#a000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language : "
                android:textColor="#a000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/publisher_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#a000"
                android:textSize="14sp" />
        </LinearLayout>
     </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/DetailLayout"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUMMARY"
            android:textStyle="bold"
            android:textColor="#dfa569"
            android:textSize="12sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#dfa569"
            android:textStyle="bold"/>
        <TextView
          android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:text="summary is not available"
            android:textColor="#a000"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
</ScrollView>