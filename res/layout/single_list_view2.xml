<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dip" 
        android:paddingRight="25dip">

                <TextView
                    android:id="@+id/title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="TextView"
                    android:textColor="#333"
                    android:textSize="22sp"
                    android:ellipsize="end"
            		android:singleLine="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" 
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By "
                        android:textColor="#444"
                        android:textSize="13sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/author_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Text View"
                        android:textColor="#444"
                        android:textSize="13sp" />
                </LinearLayout>
                <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="BOOK COVER"
                     android:textColor="#dcb667"
                     android:textSize="10sp" />
                <View
				    android:layout_width="fill_parent"
				    android:layout_height="1dp"
				    android:background="#dcb667"/>
                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:orientation="horizontal" >
				    <ImageView
				        android:id="@+id/image_label"
				        android:layout_width="100dip"
				        android:layout_height="140dip"
				        android:layout_margin="10dip"
				        android:contentDescription="TODO"
				        android:gravity="left"
				        android:padding="3dip"
				        android:src="@drawable/ic_launcher" />
				    <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:orientation="vertical"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginTop="30dp">
		                <LinearLayout
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:orientation="horizontal" >
		
		                    <TextView
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="Category : "
		                        android:textColor="#777777"
		                        android:textSize="12sp"
		                        android:textStyle="italic" />
		
		                    <TextView
		                        android:id="@+id/category_label"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="Text View"
		                        android:textColor="#777777"
		                        android:textSize="12sp" />
		                </LinearLayout>
		
		                <LinearLayout
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:orientation="horizontal" >
		
		                    <TextView
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="Pages : "
		                        android:textColor="#777777"
		                        android:textSize="12sp"
		                        android:textStyle="italic" />
		
		                    <TextView
		                        android:id="@+id/price_label"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="300"
		                        android:textColor="#777777"
		                        android:textSize="14sp" />
		                </LinearLayout>
	
		                <LinearLayout
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:orientation="horizontal" >
		
		                    <TextView
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="Language : "
		                        android:textColor="#777777"
		                        android:textSize="12sp"
		                        android:textStyle="italic" />
		
		                    <TextView
		                        android:id="@+id/publisher_label"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="TextView"
		                        android:textColor="#777777"
		                        android:textSize="12sp" />
		                </LinearLayout>
		           </LinearLayout>
		       </LinearLayout>
		       <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="ACTIONS"
                     android:textColor="#dcb667"
                     android:textSize="10sp" />
                <View
				    android:layout_width="fill_parent"
				    android:layout_height="1dp"
				    android:background="#dcb667"/>
    </LinearLayout>
<!-- ######################################################################################## -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/linearLayout1"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/button_rental"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/icon_click"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_action_import_export"
                android:contentDescription="@string/hello" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent"
                android:textColor="#444444"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/click2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/icon_click"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_action_remove"
                android:contentDescription="@string/hello" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:textColor="#444444"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/click3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/icon_click"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_action_new_attachment"
                android:contentDescription="@string/hello" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wishlist"
                android:textColor="#444444"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/click4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/icon_click"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/pick_up"
                android:contentDescription="@string/hello" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick up"
                android:textColor="#444444"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
<!-- ######################################################################################## -->
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/linearLayout1"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/sign_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/icon_click"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/sign_in_1"
                android:contentDescription="@string/hello" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signin"
                android:textColor="#444444"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sign_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/icon_click"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/sign_up"
                android:contentDescription="@string/hello" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:textColor="#444444"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>